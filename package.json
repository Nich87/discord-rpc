{
  "name": "@nich87/discord-rpc",
  "version": "1.0.0",
  "description": "A lightweight Discord RPC client for setting Rich Presence via IPC",
  "author": {
    "name": "Nich87",
    "url": " https://github.com/Nich87"
  },
  "keywords": [
    "discord",
    "rpc",
    "rich-presence",
    "ipc",
    "activity"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nich87/discord-rpc.git"
  },
  "bugs": {
    "url": "https://github.com/Nich87/discord-rpc/issues"
  },
  "homepage": "https://github.com/Nich87/discord-rpc#readme",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=24.13.0"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "prepublishOnly": "pnpm run check && pnpm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
